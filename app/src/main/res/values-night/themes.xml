<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Creator_" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/ItemColor</item>

        <item name="tabIndicatorColor">@color/ItemColor</item>
        <item name="colorPrimaryVariant">@color/ItemColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/backgroundLoginActivity</item>
        <item name="android:textColor">@color/grey</item>
        <item name="itemTextColor">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="iconTint">@color/ItemColor</item>
        <item name="tabRippleColor">@color/ItemColor</item>
        <item name="itemRippleColor">@color/ItemColor</item>
        <item name="itemIconTint">@color/ItemColor</item>
        <item name="tabTextColor">@color/ItemColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ItemColor</item>
        <item name="colorSecondaryVariant">@color/ItemColor</item>
        <item name="colorOnSecondary">@color/backgroundLoginActivity</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>