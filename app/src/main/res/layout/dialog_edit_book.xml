<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:textSize="30sp"
        android:fontFamily="@font/osr"
        />
    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_marginTop="10dp"
        android:layout_width="140dp"
        android:layout_gravity="center"
        android:layout_height="170dp"
        android:id="@+id/reciclerrr"
        android:elevation="2dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        >
        <ImageButton
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:id="@+id/updateBookImage"
            android:src="@drawable/ic_action_name_pluss"
            android:contentDescription="@string/todo" />
    </com.github.florent37.shapeofview.shapes.RoundRectView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="15dp"
        android:id="@+id/NameBook"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:hintTextColor="@color/ItemColor"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        android:enabled="true"
        android:hint="@string/NameBook"
        android:textColorHint="@color/ItemColor">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditText"
            android:textSize="20sp"
            android:maxLength="50"
            android:maxHeight="100dp"
            android:background="@color/ItemColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/osr"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        app:counterEnabled="true"
        app:counterMaxLength="1000"
        android:hint="@string/description"
        android:textColorHint="@color/ItemColor"
        app:hintTextColor="@color/ItemColor"
        app:boxStrokeWidth="2dp"
        app:errorEnabled="true"
        android:minWidth="350dp"
        android:id="@+id/description"
        app:hintAnimationEnabled="true"
        app:endIconMode="clear_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:maxHeight="150dp"
            android:maxLength="1000"
            android:background="@color/ItemColor"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:id="@+id/close"
            android:gravity="start|center"
            android:text="@string/Close"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
            android:layout_width="150dp"
            android:gravity="end|center"
            android:textSize="15sp"
            android:id="@+id/complete"
            android:text="@string/Complete"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>