<?xml version="1.0" encoding="utf-8"?>
<com.github.florent37.shapeofview.shapes.RoundRectView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:elevation="5dp"
    android:background="#F5F5F5"
    style="@style/Theme.Creator_"
    app:shape_roundRect_bottomLeftRadius="20dp"
    app:shape_roundRect_bottomRightRadius="30dp"
    app:shape_roundRect_topLeftRadius="30dp"
    app:shape_roundRect_topRightRadius="20dp"
    app:shape_roundRect_borderColor="#C6C4C4"
   >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/cardBook"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="120dp"
                android:layout_margin="10dp"
                android:layout_height="150dp"
                android:id="@+id/reciclerrr"
                android:elevation="1dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="125dp"
                    android:background="#4FC6C4C4"
                    android:layout_height="155dp"
                    android:id="@+id/My_bookImage"
                    android:contentDescription="@string/todo" />
            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <TextView
                android:id="@+id/NameBook"
                android:layout_width="256dp"
                android:maxLength="50"
                android:maxLines="30"
                android:text="@string/NameBook"
                android:layout_height="130dp"
                android:textColor="@color/ItemColor"
                android:layout_alignParentStart="true"
                android:layout_marginStart="141dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/opb"
                android:textSize="32sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="141dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/osr"
                android:id="@+id/privacyText"
                android:layout_below="@id/NameBook"
                android:layout_marginTop="5dp"/>
