<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:elevation="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundLoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/r1"
        android:layout_height="wrap_content">

        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/circleView"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            >

            <ImageButton
                android:id="@+id/buttonImageUser"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:background="@color/backgroundLoginActivity"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_action_name_pluss" />
        </com.github.florent37.shapeofview.shapes.CircleView>
        <TextView
            android:textSize="25sp"
            android:shadowColor="@color/black"
            android:elevation="2dp"
            android:fontFamily="@font/opb"
            android:id="@+id/nameTextView"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_marginStart="170dp"
            android:fontFamily="@font/opb"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="@string/Exp"
            />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="170dp"
            android:progress="0"
            android:max="100"
            app:trackColor="@color/button"
            app:indicatorColor="@color/buttonStroke"
            app:trackThickness="7dp"
            android:id="@+id/Xp_progress"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/nameTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/Xp_progress"
            android:textColor="@color/black"
            android:text="0/100XP"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:id="@+id/expBar"
            android:fontFamily="@font/osr"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2B2B2B"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_below="@id/expBar"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/circleView"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                style="@style/Widget.AppCompat.Light.ListView.DropDown"
                android:smoothScrollbar="false"
                android:id="@+id/list_button1"
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>