<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restartSwipe"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:elevation="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:id="@+id/bb"
                android:elevation="2dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp"
                app:shape_roundRect_borderColor="#C6C4C4"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:id="@+id/r1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/circleView"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="220dp"
                        android:text="Подписчиков: 0"
                        />
                    <com.github.florent37.shapeofview.shapes.CircleView
                        android:id="@+id/circleView"
                        android:layout_width="160dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="8dp"
                        android:elevation="2dp"
                        >
                        <ImageButton
                            android:layout_gravity="center"
                            android:id="@+id/buttonImageUser"
                            android:layout_width="175dp"
                            android:layout_height="125dp"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_action_name_pluss" />
                    </com.github.florent37.shapeofview.shapes.CircleView>
                    <TextView
                        android:textSize="25sp"
                        android:fontFamily="@font/opb"
                        android:id="@+id/nameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="170dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="170dp"
                        android:progress="0"
                        android:max="100"
                        app:indicatorColor="@color/ItemColor"
                        app:trackThickness="7dp"
                        android:id="@+id/Xp_progress"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@+id/nameTextView"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@id/Xp_progress"
                        android:layout_marginEnd="5dp"
                        android:textSize="15sp"
                        style="@style/Theme.Creator_"
                        android:text="0/100xp"
                        android:id="@+id/expBar"
                        android:fontFamily="@font/osr"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@id/Xp_progress"
                        android:layout_marginEnd="155dp"
                        android:textSize="15sp"
                        android:text="Уровень 0"
                        style="@style/Theme.Creator_"
                        android:id="@+id/Level"
                        android:fontFamily="@font/osr"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </com.github.florent37.shapeofview.shapes.RoundRectView>
            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_margin="5dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp"
                app:shape_roundRect_borderColor="#C6C4C4"
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_below="@id/bb"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@color/white"
                    style="@style/Theme.Creator_"
                    android:smoothScrollbar="false"
                    android:id="@+id/list_button1"
                    android:elevation="3dp"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.github.florent37.shapeofview.shapes.RoundRectView>
        </RelativeLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>